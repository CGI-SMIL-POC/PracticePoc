<div class="page-header">
  <%= image_tag("capture.PNG", size: "300x100") %> 
</div>  
 
 <div class = "col-md-6 text-center">
      <h2 align="left">New User? </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label "username*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :username, autofocus: true %>
         <%= f.object.errors[:username].join(",") %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "password*" , class: "col-xs-1 col-form-label"%>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="col-xs-6">
        <%= f.password_field :password, autocomplete: "off" %>
        <%= f.object.errors[:password].join(",") %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "Confirm_Password*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
        <%= f.object.errors[:password_confirmation].join(",") %>
      </div>
    </div>

    <div class="form-group row">
      <label class = "col-xs-1 col-form-label">LastName*</label>
      <div class="col-xs-6">
        <%= f.text_field :lastname, autofocus: true %>
        <%= f.object.errors[:lastname].join(",") %>
      </div>
    </div>


    <div class="form-group row">
      <%= f.label "email*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.email_field :email %>
        <%= f.object.errors[:email].join(",") %>
      </div>  
    </div>

    <div class="form-group row">
     <label  class = "col-xs-1 col-form-label">ZIPCode*</label>
      <div class="col-xs-6">
        <%= f.object.errors[:zipcode].join(",") %>
        <%= f.text_field :zipcode, autofocus: true %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Create Account",class: "btn",style: 'float: left; ' %>
    </div>
  <% end %>
 </div>
     
