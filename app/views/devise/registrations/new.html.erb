<div class="page-header">
  <%= image_tag("capture.PNG", size: "300x100") %> 
</div>  
 <div class = "col-md-6 text-center">
    <h1 align="left">Sign In</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label "username*", class: "col-xs-1 col-form-label" %>
        <div class="col-xs-6">
          <%= f.text_field :username, autofocus: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label "password*                                   ", class: "col-xs-1 col-form-label"%>

        <div class="col-xs-6">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group row">
          <%= f.check_box :remember_me,style: 'float: left; ' %>
          <%= f.label :remember_me ,style: 'float: left; '%>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in",class: "btn",style: 'float: left; ' %>
      </div>
  <% end %> 
 </div>
 <div class = "col-md-6 text-center">
      <h2 align="left">New User? </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= devise_error_messages! %>

    <div class="form-group row">
      <%= f.label "username*", class: "col-xs-1 col-form-label" %>
      <% if f.object.errors[:username].present? %>
       User Name <%= f.object.errors[:username].join(",") %>
      <% end %> 
      <div class="col-xs-6">
       <%= f.text_field :username, autofocus: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "password*" , class: "col-xs-1 col-form-label"%>
      <% if f.object.errors[:password].present? %>
        Password <%= f.object.errors[:password].join(",") %>
      <% end %> 
      <div class="col-xs-6">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label "Confirm Password*", class: "col-xs-1 col-form-label" %>
      <% if f.object.errors[:password_confirmation].present? %>
        <%= f.object.errors[:password_confirmation].join(",") %>
      <% end %>  
      <div class="col-xs-6">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group row">
      <label class = "col-xs-1 col-form-label">LastName*</label>
      <% if f.object.errors[:lastname].present? %>
        Last Name <%= f.object.errors[:lastname].join(",") %>
      <% end %>  
      <div class="col-xs-6">
        <%= f.text_field :lastname, autofocus: true %>
      </div>
    </div>


    <div class="form-group row">
      <%= f.label "email*", class: "col-xs-1 col-form-label" %>
      <% if f.object.errors[:email].present? %>
        Email <%= f.object.errors[:email].join(",") %>
      <% end %>  
      <div class="col-xs-6">
        <%= f.email_field :email %>
      </div>  
    </div>

    <div class="form-group row">
     <label  class = "col-xs-1 col-form-label">ZIPCode*</label>
     <% if f.object.errors[:zipcode].present? %>
        ZIP code<%= f.object.errors[:zipcode].join(",") %>
     <% end %>   
      <div class="col-xs-6">
        <%= f.text_field :zipcode, autofocus: true %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Create Account",class: "btn",style: 'float: left; ' %>
    </div>
  <% end %>
 </div>
     