<h2>Parent Profile</h2>
<div class="main col-lg-9">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="col-md-6">
  <div class="form-group row">
      <%= f.label "username*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :username, autofocus: true %>
      </div>
  </div> 

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :current_password,"Current&nbsp;Password*".html_safe, class: "col-xs-3 col-form-label" %> 
    <div class="col-xs-6">
    <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :new_password, class: "col-xs-3 col-form-label" %> 
    <div class="col-xs-6">
    <%= f.password_field :password, autocomplete: "off" %>
    <i>(leave blank if you don't want to change it)</i>
    </div>    
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation,"Confirm&nbsp;Password".html_safe, class: "col-xs-3 col-form-label" %>
    <div class="col-xs-6">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  

  <div class="form-group row">
      <%= f.label "firstname*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :firstname, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "middlename*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :middlename, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "lastname*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :lastname, autofocus: true %>
      </div>
  </div>


  <div class="form-group row">
      <%= f.label "suffix*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :suffix, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "marital_status*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.select :marital_status, options_for_select([["Select One", ""],  "Single","Married", "Divorced","Widowed"]), :class => 'genForm_dropBox' %>
      </div>
  </div>
  </div>
  <div class="col-md-6">

  <div class="form-group row">
      <%= f.label "street*","Street&nbsp;Address*".html_safe, class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :street, autofocus: true %>
      </div>
  </div>  

  <div class="form-group row">
      <%= f.label "city*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :city %>
      </div>  
  </div>

  <div class="form-group row">
      <%= f.label "state*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :state %>
      </div>  
  </div>

  <div class="form-group row">
      <%= f.label "zipcode*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :zipcode, autofocus: true %>
      </div>
  </div>

  
  <div class="form-group row">
    <%= f.label :email, class: "col-xs-3 col-form-label" %>
    <div class="col-xs-6">
    <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
      <%= f.label "phone*", class: "col-xs-3 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :phone %>
      </div>  
  </div>

</div>
</div>


  <div class="actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>


