<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group row">
      <%= f.label "username*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :username, autofocus: true %>
      </div>
  </div> 

  <div class="form-group row">
    <%= f.label :email, class: "col-xs-1 col-form-label" %>
    <div class="col-xs-6">
    <%= f.email_field :email, autofocus: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row">
    <%= f.label :password, class: "col-xs-1 col-form-label" %> 
    <div class="col-xs-6">
    <%= f.password_field :password, autocomplete: "off" %>
    <i>(leave blank if you don't want to change it)</i>
    <% if @minimum_password_length %>
      
      <em><br/><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    </div>    
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, class: "col-xs-1 col-form-label" %>
    <div class="col-xs-6">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :current_password, class: "col-xs-1 col-form-label" %> 
    <div class="col-xs-6">
    <%= f.password_field :current_password, autocomplete: "off" %>
    <i>(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div class="form-group row">
      <%= f.label "lastname*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :lastname, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "firstname*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :firstname, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "middlename*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :middlename, autofocus: true %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "dob*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.date_select :dob %>
      </div>
  </div>

  <div class="form-group row">
      <%= f.label "street*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :street, autofocus: true %>
      </div>
  </div>  

  <div class="form-group row">
      <%= f.label "city*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :city %>
      </div>  
  </div>

  <div class="form-group row">
      <%= f.label "state*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :state %>
      </div>  
  </div>

  <div class="form-group row">
      <%= f.label "phone*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :phone %>
      </div>  
  </div>

  <div class="form-group row">
      <%= f.label "zipcode*", class: "col-xs-1 col-form-label" %>
      <div class="col-xs-6">
        <%= f.text_field :zipcode, autofocus: true %>
      </div>
  </div>



  <div class="actions">
    <%= f.submit "Update", class: "btn" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn" %></p>

<%= link_to "Back", :back %>
